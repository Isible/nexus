/*
Same syntax as normal nexus but with different keywords
*/

// 'dep' is an opt-field similar to 'use'
// the dependency (nexusGL) is an auto-generated struct
dep {
    gl { version: 1.0, exclude_features: ["window"] }, // commas are optional, we exclude the window feature because we define the window lib seperately
    windowNX { version: 1.0, features: ["window_builder", "colors"], exclude_features: ["primitive_gl"] }
}
